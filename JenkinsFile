node('docker-slave') {
	stage('checkout') {
		checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/kgardeja90/jenkins-helloworld.git']]])
	}
	stage('build') {
		sh 'javac *.java && mkdir build && jar cfm ./build/HelloWorld.jar Manifest.txt HelloWorld.class'
	}
	stage('test') {
		sh 'cd build && java -jar HelloWorld.jar'
	}
	stage('archive') {
		archiveArtifacts 'build/HelloWorld.jar'
	}
	stage ('deploy') {
		def helloImage = sh 'docker build -t kgardeja/helloworld:demo2 .'
	}
	stage ('deploy test') {
		sh 'docker ps -f name=helloworld -q | xargs --no-run-if-empty docker container stop'
		sh 'docker container ls -a -fname=helloworld -q | xargs -r docker container rm'
		sh 'docker run --name=helloworld --restart=always kgardeja/helloworld:demo2'
		sh 'docker exec helloworld bash'
		sh 'cd ~/build/ && ls'
	}
}